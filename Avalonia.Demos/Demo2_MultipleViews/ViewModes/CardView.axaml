<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Avalonia.Demos.Demo2_MultipleViews"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Avalonia.Demos.Demo2_MultipleViews.ViewModes.CardView"
             x:DataType="vm:MultipleViewsViewModel">

    <Design.DataContext>
        <vm:MultipleViewsViewModel />
    </Design.DataContext>

    <ScrollViewer>
        <ItemsControl ItemsSource="{Binding Products}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Margin="10"
                            Padding="20"
                            Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                            BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                            BorderThickness="1"
                            CornerRadius="8">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" Opacity="0.3" />
                        </Border.Effect>

                        <Grid ColumnDefinitions="Auto,*">

                            <StackPanel Grid.Column="0" Spacing="10" Margin="0,0,20,0">
                                <Border Background="{DynamicResource SystemAccentColor}"
                                        CornerRadius="4"
                                        Padding="8,4">
                                    <TextBlock Text="{Binding ProductType}"
                                               FontSize="12"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource SystemAccentColorForeground}"
                                               HorizontalAlignment="Center" />
                                </Border>

                                <TextBlock Text="{Binding Price, StringFormat='${0:F2}'}"
                                           FontSize="24"
                                           FontWeight="Bold"
                                           Foreground="{DynamicResource SystemAccentColor}"
                                           HorizontalAlignment="Center" />
                            </StackPanel>

                            <StackPanel Grid.Column="1" Spacing="10">
                                <TextBlock Text="{Binding Name}"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           TextWrapping="Wrap" />

                                <TextBlock Text="{Binding Description}"
                                           FontSize="13"
                                           TextWrapping="Wrap"
                                           Opacity="0.8" />

                                <Border BorderThickness="0,1,0,0"
                                        Padding="0,10,0,0"
                                        Margin="0,5,0,0">
                                    <Border.BorderBrush>
                                        <SolidColorBrush Color="{DynamicResource SystemBaseHighColor}" Opacity="0.3" />
                                    </Border.BorderBrush>
                                    <TextBlock FontSize="11" Opacity="0.6">
                                        <Run Text="ID: " />
                                        <Run Text="{Binding Id}" FontWeight="SemiBold" />
                                    </TextBlock>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </ScrollViewer>

</UserControl>
