<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Avalonia.Demos.Demo1_MasterDetail.ProductTypes"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="450"
             x:Class="Avalonia.Demos.Demo1_MasterDetail.ProductTypes.ElectronicsView"
             x:DataType="vm:ElectronicsViewModel">

    <Design.DataContext>
        <vm:ElectronicsViewModel Name="Laptop Pro 15"
                                 Price="1299.99"
                                 Description="High-performance laptop with latest processor"
                                 Brand="TechBrand"
                                 ModelNumber="LP-15-2024"
                                 WarrantyMonths="24"
                                 PowerConsumption="65W" />
    </Design.DataContext>

    <StackPanel Spacing="10" Margin="20">
    <TextBlock Text="Electronics Details" FontSize="20" FontWeight="Bold" />

    <StackPanel Spacing="5">
      <TextBlock Text="Name:" FontWeight="SemiBold" />
      <TextBlock Text="{Binding Name}" />
    </StackPanel>

    <StackPanel Spacing="5">
      <TextBlock Text="Price:" FontWeight="SemiBold" />
      <TextBlock Text="{Binding Price, StringFormat='${0:F2}'}" />
    </StackPanel>

    <StackPanel Spacing="5">
      <TextBlock Text="Description:" FontWeight="SemiBold" />
      <TextBlock Text="{Binding Description}" TextWrapping="Wrap" />
    </StackPanel>

    <Separator Height="1" Margin="0,10" />

    <StackPanel Spacing="5">
      <TextBlock Text="Brand:" FontWeight="SemiBold" />
      <TextBlock Text="{Binding Brand}" />
    </StackPanel>

    <StackPanel Spacing="5">
      <TextBlock Text="Model Number:" FontWeight="SemiBold" />
      <TextBlock Text="{Binding ModelNumber}" />
    </StackPanel>

    <StackPanel Spacing="5">
      <TextBlock Text="Warranty:" FontWeight="SemiBold" />
      <TextBlock Text="{Binding WarrantyMonths, StringFormat='{}{0} months'}" />
    </StackPanel>

    <StackPanel Spacing="5">
      <TextBlock Text="Power Consumption:" FontWeight="SemiBold" />
      <TextBlock Text="{Binding PowerConsumption}" />
    </StackPanel>
  </StackPanel>

</UserControl>
