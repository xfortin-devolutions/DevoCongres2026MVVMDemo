<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:Avalonia.Demos.Demo1_MasterDetail"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Avalonia.Demos.Demo1_MasterDetail.MasterDetailView"
             x:DataType="local:MasterDetailViewModel">

    <Design.DataContext>
        <local:MasterDetailViewModel />
    </Design.DataContext>
    
    <DockPanel>
        <TextBlock Text="Demo 1: Master-Detail Pattern"
                   FontSize="24"
                   FontWeight="Bold"
                   Margin="20"
                   HorizontalAlignment="Center"
                   DockPanel.Dock="Top" />

        <ListBox ItemsSource="{Binding Products}"
                 SelectedItem="{Binding SelectedProduct}"
                 DockPanel.Dock="Left">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}"
                               Padding="5"
                               FontSize="14" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        
        <ContentControl Content="{Binding SelectedProduct}" />
    </DockPanel>

</UserControl>
