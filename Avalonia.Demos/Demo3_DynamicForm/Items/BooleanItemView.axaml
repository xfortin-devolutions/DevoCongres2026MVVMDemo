<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Avalonia.Demos.Demo3_DynamicForm.Items"
             x:Class="Avalonia.Demos.Demo3_DynamicForm.Items.BooleanItemView"
             x:DataType="vm:BooleanItemViewModel">

    <Design.DataContext>
        <vm:BooleanItemViewModel Label="Enable notifications" Value="True" />
    </Design.DataContext>

    <Grid ColumnSpacing="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" SharedSizeGroup="FormItemLabel" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <CheckBox Grid.Column="1"
                  Content="{Binding Label}"
                  IsChecked="{Binding Value}"
                  VerticalAlignment="Center" />
    </Grid>

</UserControl>
