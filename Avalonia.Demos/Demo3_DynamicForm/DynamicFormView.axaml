<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:Avalonia.Demos.Demo3_DynamicForm"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Avalonia.Demos.Demo3_DynamicForm.DynamicFormView"
             x:DataType="local:DynamicFormViewModel">

    <Design.DataContext>
        <local:DynamicFormViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*">
        <TextBlock Grid.Row="0"
                   Text="Demo 3: Dynamic Form Composition"
                   FontSize="24"
                   FontWeight="Bold"
                   Margin="20"
                   HorizontalAlignment="Center"/>

        <ScrollViewer Grid.Row="1"
                      Margin="20,0">
            <ItemsControl ItemsSource="{Binding FormItems}"
                          Grid.IsSharedSizeScope="True">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Spacing="10" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </ScrollViewer>
    </Grid>

</UserControl>
